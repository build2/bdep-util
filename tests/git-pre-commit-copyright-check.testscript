.include git-common.testscript git-pre-commit-common.testscript

: basic
:
{
  $clone_prj;

  cat <<EOI >=prj/LICENSE;
    Copyright (c) 2014-2019 the build2 authors.
    EOI
  $ga .;

  $gc 2>>EOE;
    WARNING: last copyright year in 'LICENSE' is 2019
    EOE

  date +"%Y" | set year;
  cat <<"EOI" >=prj/LICENSE;
    Copyright (c) 2014-$year the build2 authors.
    EOI
  $gc
}
